
generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"

}

model User{
  id   Int  @id @default(autoincrement())
  email String @unique
  password String
  firstName String
  lastName String
  purchases Purchase[]
}

model Instructor{
  id   Int  @id @default(autoincrement())
  email String
  password String
  firstName String
  lastName String
  courses Course[]
}

model Course{
  id   Int   @id   @default(autoincrement())
  title String 
  description String
  price Int
  imageUrl String
  instructor Instructor @relation(fields:[instructorId],references: [id])
  instructorId Int
  purchase Purchase[] 
} 

model Purchase{
id  Int   @id @default(autoincrement())
user User @relation(fields:[userId],references: [id])
userId Int
course Course @relation(fields:[courseId],references: [id])
courseId Int
}